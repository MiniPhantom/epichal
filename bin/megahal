#!/usr/bin/env node

'use strict';
var readline = require('readline');
var MegaHAL = require('../src/megahal');
var lineReader = require('line-reader');
var path = require('path');

var megaHal = MegaHAL();

var observationFile = process.argv[2] || path.resolve(path.dirname(__filename), 'support', 'sherlock.observation');

lineReader.eachLine(observationFile, function(line,last,cb) {
  megaHal.learn(line,cb);
}).then(function() {

  var rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout
  });

  rl.setPrompt('> ');

  rl.on('line', function(input) {
    megaHal.reply(input, function(err, reply) {
      console.log(reply);
      rl.prompt();
      megaHal.learn(input);
    });
  });

  megaHal.reply('', function(err, reply) {
    console.log(reply);
    rl.prompt();
  });
});
